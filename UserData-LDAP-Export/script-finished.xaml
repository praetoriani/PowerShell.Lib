<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Export abgeschlossen" 
    Width="460" 
    Height="320" 
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    WindowStyle="SingleBorderWindow"
    ShowInTaskbar="False"
    Topmost="True">

    <Window.Resources>
        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#FF27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF269654"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF12d664"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FFCCCCCC"/>
                                <Setter Property="Foreground" Value="#FF27AE60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#FF27AE60">
            <TextBlock 
                Text="✅" 
                FontSize="24" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left" 
                Margin="20,0,0,0" 
                Foreground="White"/>
            <TextBlock 
                Text="Export erfolgreich abgeschlossen" 
                FontSize="16" 
                FontWeight="SemiBold" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left" 
                Margin="60,0,0,0" 
                Foreground="White"/>
        </Grid>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="30,20,30,20" VerticalAlignment="Center">
            <TextBlock 
                Text="Active Directory Export erfolgreich!" 
                FontSize="16" 
                FontWeight="Bold"
                TextAlignment="Center"
                Margin="0,0,0,15" 
                Foreground="#FF27AE60"/>
            <TextBlock 
                Text="Die Benutzerdaten wurden erfolgreich aus dem Active Directory&#10;exportiert und in der CSV-Datei gespeichert." 
                FontSize="12" 
                TextAlignment="Center"
                TextWrapping="Wrap" 
                Margin="0,0,0,15"
                Foreground="#FF333333"/>
            <TextBlock 
                Text="Sie können die exportierte Datei nun in Excel oder&#10;einem anderen Programm öffnen und weiterverarbeiten." 
                FontSize="12" 
                TextAlignment="Center"
                TextWrapping="Wrap" 
                Foreground="#FF666666"/>
        </StackPanel>

        <!-- Footer -->
        <Grid Grid.Row="2" Background="#FFF5F5F5">
            <Button 
                Name="btnOK" 
                Content="OK" 
                Style="{StaticResource SuccessButton}"
                Width="90" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>