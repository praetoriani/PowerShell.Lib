<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LDAP-Zugriffsfehler" 
    Width="480" 
    Height="360" 
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    WindowStyle="SingleBorderWindow"
    ShowInTaskbar="False"
    Topmost="True">

    <Window.Resources>
        <Style x:Key="ExitButton" TargetType="Button">
            <Setter Property="Background" Value="#FFF39C12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFEEAF4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFF39C12"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FFCCCCCC"/>
                                <Setter Property="Foreground" Value="#FFF39C12"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#FFF39C12">
            <TextBlock 
                Text="🔒" 
                FontSize="24" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left" 
                Margin="20,0,0,0" 
                Foreground="White"/>
            <TextBlock 
                Text="LDAP-Zugriffsfehler" 
                FontSize="16" 
                FontWeight="SemiBold" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left" 
                Margin="60,0,0,0" 
                Foreground="White"/>
        </Grid>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="30,20,30,20" VerticalAlignment="Center">
            <TextBlock 
                Text="Zugriff auf Active Directory fehlgeschlagen!" 
                FontSize="16" 
                FontWeight="Bold"
                TextAlignment="Center"
                Margin="0,0,0,15" 
                Foreground="#FFF39C12"/>
            <TextBlock 
                Text="Der angegebene LDAP-Pfad konnte nicht erreicht oder durchsucht werden." 
                FontSize="12" 
                TextAlignment="Center"
                TextWrapping="Wrap" 
                Margin="0,0,0,10"
                Foreground="#FF333333"/>
            <TextBlock 
                Text="Mögliche Ursachen:" 
                FontSize="12" 
                FontWeight="SemiBold"
                TextAlignment="Left"
                Margin="0,10,0,5"
                Foreground="#FF333333"/>
            <TextBlock 
                Text="• Der LDAP-Pfad existiert nicht oder ist falsch konfiguriert&#10;• Unzureichende Berechtigungen für den Zugriff&#10;• Netzwerkverbindung zum Domain Controller unterbrochen&#10;• Active Directory-Dienst nicht verfügbar" 
                FontSize="11" 
                TextAlignment="Left"
                TextWrapping="Wrap" 
                Margin="10,0,0,0"
                Foreground="#FF666666"/>
        </StackPanel>

        <!-- Footer -->
        <Grid Grid.Row="2" Background="#FFF5F5F5">
            <Button 
                Name="btnExit" 
                Content="Beenden" 
                Style="{StaticResource ExitButton}"
                Width="100" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>