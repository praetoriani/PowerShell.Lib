<?xml version="1.0" encoding="utf-8"?>
<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DAMSA - URL Fehler"
    Width="450"
    Height="250"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    Background="#FF1E1E1E"
    Topmost="True">
    
    <Window.Resources>
        <!-- Font Resources -->
        <FontFamily x:Key="ExoRegular">Exo 2</FontFamily>
        <FontFamily x:Key="ExoBold">Exo 2 SemiBold</FontFamily>
        
        <!-- Button Style with Hover and Click Effects -->
        <Style x:Key="DAMSAButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="{StaticResource ExoRegular}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF007ACC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF1BA1E2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF005A9E"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF0E5A8A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   x:Name="TitleText"
                   Text="URL Fehler"
                   FontFamily="{StaticResource ExoBold}"
                   FontSize="20"
                   Foreground="#FFFF6B6B"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Error Message -->
        <TextBlock Grid.Row="1" 
                   x:Name="ErrorText"
                   Text="Das URL-Eingabefeld ist leer. Bitte geben Sie eine gÃ¼ltige Microsoft Store App URL ein."
                   FontFamily="{StaticResource ExoRegular}"
                   FontSize="14"
                   Foreground="#FFCCCCCC"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- OK Button -->
        <Button Grid.Row="2"
                x:Name="OkButton"
                Content="OK"
                Style="{StaticResource DAMSAButtonStyle}"
                Width="100"
                Height="35"
                HorizontalAlignment="Center"/>
    </Grid>
</Window>