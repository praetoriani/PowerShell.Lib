<?xml version="1.0" encoding="utf-8"?>
<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DAMSA - Microsoft Store App Downloader"
    Width="650"
    Height="450"
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanMinimize"
    Background="#FF1E1E1E">
    
    <Window.Resources>
        <!-- Font Resources -->
        <FontFamily x:Key="ExoRegular">Exo 2</FontFamily>
        <FontFamily x:Key="ExoBold">Exo 2 SemiBold</FontFamily>
        
        <!-- Button Style with Hover and Click Effects -->
        <Style x:Key="DAMSAButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="{StaticResource ExoRegular}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF007ACC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF1BA1E2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF005A9E"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF0E5A8A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBox Style -->
        <Style x:Key="DAMSATextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="{StaticResource ExoRegular}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   x:Name="TitleText"
                   Text="DAMSA - Microsoft Store App Downloader"
                   FontFamily="{StaticResource ExoBold}"
                   FontSize="24"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Info Text -->
        <TextBlock Grid.Row="1" 
                   x:Name="InfoText"
                   Text="DAMSA ermöglicht es Ihnen, Microsoft Store Apps herunterzuladen, ohne den Microsoft Store verwenden zu müssen. Geben Sie einfach die URL einer Microsoft Store App ein und wählen Sie die gewünschten Dateien zum Download aus."
                   FontFamily="{StaticResource ExoRegular}"
                   FontSize="14"
                   Foreground="#FFCCCCCC"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Margin="0,0,0,20"/>
        
        <!-- URL Input Section -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock x:Name="UrlLabel"
                       Text="Microsoft Store App URL:"
                       FontFamily="{StaticResource ExoRegular}"
                       FontSize="14"
                       Foreground="White"
                       Margin="5,0,5,5"/>
            
            <TextBox x:Name="UrlTextBox"
                     Style="{StaticResource DAMSATextBoxStyle}"
                     Height="35"
                     Text="https://apps.microsoft.com/detail/"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="DownloadButton"
                    Content="Download"
                    Style="{StaticResource DAMSAButtonStyle}"
                    Width="120"
                    Height="35"/>
            
            <Button x:Name="ExitButton"
                    Content="Beenden"
                    Style="{StaticResource DAMSAButtonStyle}"
                    Width="120"
                    Height="35"/>
        </StackPanel>
    </Grid>
</Window>