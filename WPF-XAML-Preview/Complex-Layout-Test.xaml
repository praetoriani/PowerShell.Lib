<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Complex Layout Test" Height="500" Width="700">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Border Grid.Column="0" Background="#FFE3F2FD" BorderBrush="#FF1976D2" BorderThickness="1">
            <StackPanel Margin="10">
                <TextBlock Text="Navigation" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox Height="200">
                    <ListBoxItem Content="Dashboard"/>
                    <ListBoxItem Content="Einstellungen"/>
                    <ListBoxItem Content="Berichte"/>
                    <ListBoxItem Content="Hilfe"/>
                </ListBox>

                <TextBlock Text="Tools" FontWeight="Bold" Margin="0,20,0,10"/>
                <Button Content="Export" Margin="0,5"/>
                <Button Content="Import" Margin="0,5"/>
                <Button Content="Reset" Margin="0,5"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <ToolBarTray Grid.Row="0">
                <ToolBar>
                    <Button Content="Neu"/>
                    <Button Content="Öffnen"/>
                    <Button Content="Speichern"/>
                    <Separator/>
                    <Button Content="Kopieren"/>
                    <Button Content="Einfügen"/>
                </ToolBar>
            </ToolBarTray>

            <!-- Content Area -->
            <TabControl Grid.Row="1" Margin="0,10">
                <TabItem Header="Tab 1">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Filter: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Width="200" Margin="0,0,10,0"/>
                            <Button Content="Suchen" Padding="10,2"/>
                        </StackPanel>

                        <DataGrid Grid.Row="1" AutoGenerateColumns="True">
                            <!-- Würde normalerweise Daten aus ItemsSource anzeigen -->
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Tab 2">
                    <ScrollViewer>
                        <StackPanel Margin="10">
                            <TextBlock Text="Detailansicht" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                            <GroupBox Header="Allgemeine Informationen" Margin="0,0,0,10">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" Margin="0,0,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Beschreibung:" Margin="0,0,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" Margin="0,0,10,5"/>
                                    <ComboBox Grid.Row="2" Grid.Column="1">
                                        <ComboBoxItem Content="Aktiv"/>
                                        <ComboBoxItem Content="Inaktiv"/>
                                        <ComboBoxItem Content="Wartung"/>
                                    </ComboBox>
                                </Grid>
                            </GroupBox>

                            <GroupBox Header="Erweiterte Optionen">
                                <StackPanel Margin="10">
                                    <CheckBox Content="Option A aktivieren" Margin="0,5"/>
                                    <CheckBox Content="Option B aktivieren" Margin="0,5"/>
                                    <CheckBox Content="Debugging-Modus" Margin="0,5"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                        <Button Content="Übernehmen" Padding="15,5" Margin="0,0,10,0"/>
                                        <Button Content="Zurücksetzen" Padding="15,5"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

            <!-- Status Bar -->
            <StatusBar Grid.Row="2">
                <StatusBarItem Content="Bereit"/>
                <Separator/>
                <StatusBarItem Content="Elemente: 42"/>
                <StatusBarItem HorizontalAlignment="Right" Content="12:34:56"/>
            </StatusBar>
        </Grid>
    </Grid>
</Window>