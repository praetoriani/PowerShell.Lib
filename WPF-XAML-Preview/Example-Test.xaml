<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Test XAML Window" Height="400" Width="600"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2E3440" Padding="20,15">
            <TextBlock Text="XAML Preview Test Window" 
                       FontSize="18" FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Content Area -->
        <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Dies ist ein Test-XAML für den WPF-XAML-Preview!" 
                       FontSize="16" Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Funktionen dieser Anwendung:" 
                       FontSize="14" FontWeight="Bold" 
                       Margin="0,0,0,10"/>

            <BulletDecorator Margin="20,5">
                <BulletDecorator.Bullet>
                    <Ellipse Fill="Blue" Width="5" Height="5"/>
                </BulletDecorator.Bullet>
                <TextBlock Text="Dynamisches Laden von XAML-Dateien" Margin="10,0,0,0"/>
            </BulletDecorator>

            <BulletDecorator Margin="20,5">
                <BulletDecorator.Bullet>
                    <Ellipse Fill="Green" Width="5" Height="5"/>
                </BulletDecorator.Bullet>
                <TextBlock Text="Automatische Konsolen-Verwaltung" Margin="10,0,0,0"/>
            </BulletDecorator>

            <BulletDecorator Margin="20,5">
                <BulletDecorator.Bullet>
                    <Ellipse Fill="Orange" Width="5" Height="5"/>
                </BulletDecorator.Bullet>
                <TextBlock Text="Fehlerbehandlung für ungültige XAML" Margin="10,0,0,0"/>
            </BulletDecorator>

            <BulletDecorator Margin="20,5">
                <BulletDecorator.Bullet>
                    <Ellipse Fill="Red" Width="5" Height="5"/>
                </BulletDecorator.Bullet>
                <TextBlock Text="Benutzerfreundliche Navigation" Margin="10,0,0,0"/>
            </BulletDecorator>

            <!-- Sample Controls -->
            <GroupBox Header="Beispiel-Controls" Margin="0,20,0,0">
                <StackPanel Margin="10">
                    <Button Content="Test Button" Width="150" Height="30" Margin="5"/>
                    <CheckBox Content="Test Checkbox" Margin="5"/>
                    <TextBox Text="Test TextBox" Width="200" Margin="5"/>
                    <ComboBox Width="200" Margin="5">
                        <ComboBoxItem Content="Option 1"/>
                        <ComboBoxItem Content="Option 2"/>
                        <ComboBoxItem Content="Option 3"/>
                    </ComboBox>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FFF5F5F5" Padding="15">
            <TextBlock Text="WPF-XAML-Preview v1.00.00 - Erstellt für PowerShell WPF-Entwicklung" 
                       FontSize="10" Foreground="Gray" 
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>