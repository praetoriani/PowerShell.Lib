# .gitattributes file for PowerShell.Lib Repository
# This file excludes specified folders and all their subfolders/files from git archive operations
# which affects how GitHub generates source code archives/releases

# Exclude specific project folders and all their contents recursively
SysDaemon/** export-ignore
Power.Ctrl.app/** export-ignore
Context Menu Switcher/** export-ignore
DLL-Icon-Viewer/** export-ignore  
Demo.Fonts/** export-ignore

# Exclude specific project folders by using C-Style Quoting
"Context Menu Switcher"/** export-ignore
"SysDaemon"/** export-ignore
"Power.Ctrl.app"/** export-ignore
"DLL-Icon-Viewer"/** export-ignore  
"Demo.Fonts"/** export-ignore

# Exclude specific project folders by using Backslash Escaping
Context\ Menu\ Switcher/** export-ignore

# Exclude specific project folders by using POSIX Character Classes
Power[.]Ctrl[.]app/** export-ignore
Context[[:space:]]Menu[[:space:]]Switcher/** export-ignore
DLL[-]Icon[-]Viewer/** export-ignore  
Demo[.]Fonts/** export-ignore
HashGen[[:space:]]UI/** export-ignore
HashGen[[:space:]]UI/v1.00.06/** export-ignore
HashGen[[:space:]]UI/v1.01.00/** export-ignore

# Exclude GitHub specific files and folders
.github/** export-ignore
.gitattributes export-ignore
.gitignore export-ignore

# Exclude documentation files that shouldn't be in releases
*.md export-ignore
README.md export-ignore

# Additional common development files to exclude (if present)
.vscode/** export-ignore
.vs/** export-ignore
*.code-workspace export-ignore
.editorconfig export-ignore
