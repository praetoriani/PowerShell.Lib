<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Power.Ctrl.app - Confirmation"
        Width="520"
        Height="200"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Topmost="True"
        WindowStyle="SingleBorderWindow"
        Background="#FF1E1E1E"
        Foreground="#FFFFFFFF">
    
    <!-- Window Resources for Styling -->
    <Window.Resources>
        <!-- Enhanced Dark Theme Button Style with Lighter Colors -->
        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6A6A6A"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF8A8A8A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF7A7A7A"/>
                                <Setter Property="BorderBrush" Value="#FF4A9EFF"/>
                            </Trigger>
                            <!-- Pressed Effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4A9EFF"/>
                                <Setter Property="BorderBrush" Value="#FF2E7FE0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Text Style for Message -->
        <Style x:Key="MessageTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="20"/>
        </Style>
    </Window.Resources>
    
    <!-- Main Container -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Confirmation Message -->
        <TextBlock x:Name="ConfirmationMessage"
                   Grid.Row="0"
                   Style="{StaticResource MessageTextStyle}"
                   VerticalAlignment="Center"
                   Text="Are you sure you want to perform this action?"/>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom">
            
            <!-- Yes Button -->
            <Button x:Name="YesButton"
                    Style="{StaticResource DarkButtonStyle}"
                    Content="Yes"
                    FontSize="12"
                    FontWeight="Medium"/>
            
            <!-- No Button -->
            <Button x:Name="NoButton"
                    Style="{StaticResource DarkButtonStyle}"
                    Content="No"
                    FontSize="12"
                    FontWeight="Medium"/>
            
        </StackPanel>
    </Grid>
</Window>