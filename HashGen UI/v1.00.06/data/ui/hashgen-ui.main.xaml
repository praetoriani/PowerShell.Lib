<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HashGen UI" Height="380" Width="680"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Name="MainWindow">
    
    <Window.Resources>
        <!-- Button Hover Styles -->
        <Style x:Key="GreenButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0E6B0E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="RedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D83B01"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B93200"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Introduction Text (Multi-line with steps) -->
        <TextBlock Grid.Row="0" Name="IntroText" TextWrapping="Wrap"
                   FontSize="14" Foreground="#333333" 
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   LineHeight="22"
                   Text="HashGen UI is a tool for generating cryptographic hash values for files.&#x0a;Step 1) Select a file using the Browse button&#x0a;Step 2) Choose your preferred hash algorithm (SHA256, SHA384, or SHA512)&#x0a;Step 3) Click Generate Hash to create the hash value.&#x0a;You can process individual files or use a filelist.txt for batch processing."/>
        
        <!-- File Selection Section -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" Name="FilePathTextBox" 
                     Height="34" VerticalContentAlignment="Center"
                     IsReadOnly="True" Background="#F5F5F5"
                     BorderBrush="#CCCCCC" BorderThickness="1"
                     Padding="8,0,8,0" FontSize="14"/>
            
            <Button Grid.Column="2" Name="BrowseButton"
                    Height="34" Content="Browse..."
                    FontSize="14" Style="{StaticResource BlueButtonStyle}"/>
        </Grid>
        
        <!-- Algorithm Selection -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Name="AlgoLabel"
                       Text="Please select hash algorithm:" FontSize="14"
                       VerticalAlignment="Center" Foreground="#333333"
                       HorizontalAlignment="Left"/>
            
            <ComboBox Grid.Column="2" Name="AlgoComboBox"
                      Height="34" VerticalContentAlignment="Center"
                      FontSize="14" SelectedIndex="0"
                      HorizontalAlignment="Stretch">
                <ComboBoxItem Content="SHA256"/>
                <ComboBoxItem Content="SHA384"/>
                <ComboBoxItem Content="SHA512"/>
            </ComboBox>
        </Grid>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="1" Name="GenerateButton"
                    Height="42" Content="Generate Hash"
                    FontSize="14" Style="{StaticResource GreenButtonStyle}"/>
            
            <Button Grid.Column="3" Name="ExitButton"
                    Height="42" Content="Exit"
                    FontSize="14" Style="{StaticResource RedButtonStyle}"/>
        </Grid>
    </Grid>
</Window>